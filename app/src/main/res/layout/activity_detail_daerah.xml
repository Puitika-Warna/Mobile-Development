<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brandy"
    tools:context=".ui.detail.DetailActivityDaerah">

        <ImageView
            android:id="@+id/iv_kaindaerah"
            android:layout_width="420dp"
            android:layout_height="240dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="490dp"
            android:background="@drawable/kaindaerah"
            android:elevation="2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.032" />

        <ImageView
            android:id="@+id/iv_rectangle_4"
            android:layout_width="420dp"
            android:layout_height="245dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="980dp"
            android:background="@drawable/rectangle_4_ic"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.783" />

        <View
            android:id="@+id/v_ellipse"
            android:layout_width="42dp"
            android:layout_height="41dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/eclipse_1"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_kaindaerah"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.957"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.106" />

        <ImageButton
        android:id="@+id/ib_favorite"
        android:layout_width="27.75dp"
        android:layout_height="29.27dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/black"
        android:elevation="5dp"
        android:src="@drawable/unfavorite_ic"
        app:layout_constraintBottom_toBottomOf="@+id/v_ellipse"
        app:layout_constraintEnd_toEndOf="@+id/v_ellipse"
        app:layout_constraintStart_toStartOf="@+id/v_ellipse"
        app:layout_constraintTop_toTopOf="@+id/v_ellipse" />

    <TextView
        android:id="@+id/tv_kaindaerah"
        style="@style/TextAppearance.MaterialComponents.Headline6"
        android:layout_width="282dp"
        android:layout_height="39dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="130dp"
        android:elevation="5dp"
        android:gravity="center|top"
        android:text="@string/namakain_daerah"
        android:textAppearance="@style/namakain_daerah"
        android:textColor="@color/soft_peach"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_kaindaerah"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_kaindaerah" />

        <View
            android:id="@+id/rectangle_5"
            android:layout_width="423dp"
            android:layout_height="1230dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rectangle_5_ic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <View
            android:id="@+id/rectangle_6"
            android:layout_width="380dp"
            android:layout_height="35dp"
            android:layout_gravity="start"
            android:background="@drawable/rectangle_6_ic"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.487"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_kaindaerah"
            app:layout_constraintVertical_bias="0.01" />

        <TextView
            android:id="@+id/tv_desc_kaindaerah"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="338dp"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:elevation="5dp"
            android:text="@string/desc_kaindaerah"
            android:textAppearance="@style/desc_kaindaerah"
            android:textColor="@color/dark_blue_green"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_6"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_6"
            app:layout_constraintStart_toStartOf="@+id/rectangle_6"
            app:layout_constraintTop_toBottomOf="@+id/iv_kaindaerah"
            app:layout_constraintVertical_bias="1.0" />

        <View
            android:id="@+id/rectangle_7"
            android:layout_width="375dp"
            android:layout_height="249dp"
            android:layout_alignParentTop="true"
            android:layout_gravity="start"
            android:background="@drawable/rectangle_7_ic"
            android:elevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.319" />

        <TextView
            android:id="@+id/tv_isikaindaerah"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="350dp"
            android:layout_height="230dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="20dp"
            android:elevation="6dp"
            android:gravity="start"
            android:lineSpacingExtra="-2sp"
            android:text="@string/isi_kaindaerah"
            android:textAppearance="@style/isi_kaindaerah"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.471"
            app:layout_constraintStart_toStartOf="@+id/rectangle_7"
            app:layout_constraintTop_toTopOf="@+id/rectangle_7"
            app:layout_constraintVertical_bias="0.425" />

        <ImageView
            android:id="@+id/rectangle_8"
            android:layout_width="227dp"
            android:layout_height="34dp"
            android:layout_gravity="start"
            android:background="@drawable/rectangle_10_ic"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.103"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.482" />

        <TextView
            android:id="@+id/tv_locate_kaindaerah"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:elevation="5dp"
            android:text="@string/locate_kaindaerah"
            android:textAppearance="@style/desc_kaindaerah"
            android:textColor="@color/dark_blue_green"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_8"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_8"
            app:layout_constraintStart_toStartOf="@+id/rectangle_8"
            app:layout_constraintTop_toTopOf="@+id/rectangle_8" />

        <View
            android:id="@+id/rectangle_9"
            android:layout_width="180dp"
            android:layout_height="116dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="start"
            android:layout_marginTop="372dp"
            android:background="@drawable/rectangle_8_ic"
            android:elevation="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.095"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_kaindaerah"
            app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/iv_maps"
        android:layout_width="170dp"
        android:layout_height="102dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="fill_horizontal"
        android:background="@drawable/maps"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_9"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_9"
        app:layout_constraintStart_toStartOf="@+id/rectangle_9"
        app:layout_constraintTop_toTopOf="@+id/rectangle_9" />

    <View
            android:id="@+id/rectangle_10"
            android:layout_width="134dp"
            android:layout_height="34dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rectangle_11_ic"
            android:elevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.08"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.647" />

        <TextView
            android:id="@+id/tv_view_more"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="116dp"
            android:layout_height="37dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:elevation="5dp"
            android:gravity="center"
            android:text="@string/view_more"
            android:textColor="@color/dark_blue_green"
            android:textAppearance="@style/desc_kaindaerah"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/rectangle_10"
            app:layout_constraintEnd_toEndOf="@+id/rectangle_10"
            app:layout_constraintHorizontal_bias="0.796"
            app:layout_constraintStart_toStartOf="@+id/rectangle_10"
            app:layout_constraintTop_toTopOf="@+id/rectangle_10"
            app:layout_constraintVertical_bias="0.455" />

        <View
            android:id="@+id/rectangle_11"
            android:layout_width="170dp"
            android:layout_height="116dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/rectangle_9_ic"
            android:elevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.896"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rectangle_7"
            app:layout_constraintVertical_bias="0.119" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
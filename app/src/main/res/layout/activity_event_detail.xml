<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brandy"
    android:paddingBottom="10dp"
    tools:context=".ui.main.event.EventDetailActivity">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="0dp"
                android:layout_height="270dp"
                android:layout_marginTop="-50dp"
                app:cardCornerRadius="70dp"
                app:cardElevation="1dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/iv_imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:elevation="50dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/banner_tenun"/>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="0dp"
                android:layout_height="175dp"
                android:layout_marginStart="50dp"
                android:layout_marginTop="-55dp"
                android:layout_marginEnd="50dp"
                android:background="@color/white_smoke"
                android:elevation="5dp"
                android:outlineSpotShadowColor="@color/black"
                app:cardCornerRadius="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView">

                <!-- Add your content inside this CardView -->
                <TextView
                    android:id="@+id/tv_eventname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="BATIK BORDIR TENUN DAN CRAFT"
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_green"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_eventtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:padding="12dp"
                    android:text="08.00 am - 13.00 pm"
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_green"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    app:layout_constraintTop_toBottomOf="@+id/tv_description1" />

                <TextView
                    android:id="@+id/tv_eventdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="80dp"
                    android:padding="12dp"
                    android:text="12 November 2023"
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_green"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    app:layout_constraintTop_toBottomOf="@+id/tv_description2" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="115dp"
                    android:padding="12dp"
                    android:text="Jl Aceh No 66 Kota Bandung"
                    android:textAlignment="center"
                    android:textColor="@color/dark_blue_green"
                    android:textSize="15dp"
                    android:textStyle="italic" />

            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:id="@+id/v_greyshape"
                android:layout_width="match_parent"
                android:layout_height="355dp"
                android:layout_marginTop="100dp"
                android:background="@color/grey"
                app:layout_constraintTop_toTopOf="@+id/cardView2">

                <TextView
                    android:id="@+id/tv_detail_event"
                    android:layout_width="match_parent"
                    android:layout_height="455dp"
                    android:text="isguigiuahfoa nvaneounaevoinaevnaeonaj  naovnoanvoaenvo ianoanonaeovmacnapvn ajkjbkkjajbioeifioe iefiffiof eioefni einf o einf poaif oani akm aa ooie ijfoina efi ineaio jaooiv ejoinoif iaip aepjfj poe foijaww foia f eiioif a pojoijf  eiiokf[pjfojf fjijoihiojap f fjia[q fm foqhf fkoiiqoijfiqf foinfoq poq fjqih fiooihhqf pfhaf "
                    android:textSize="20dp"
                    android:textAlignment="textStart"
                    android:elevation="5dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="5dp">

                </TextView>
            </RelativeLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>

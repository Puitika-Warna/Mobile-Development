<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/brandy"
    tools:context=".ui.profile.ProfileActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_circleImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/profile_ic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </de.hdodenhof.circleimageview.CircleImageView>

    <View
        android:id="@+id/ic_pencil_1"
        android:clickable="true"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="170dp"
        android:background="@drawable/pencil_ic"
        app:layout_constraintBottom_toTopOf="@+id/rectangle_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/ic_pencil_2"
        android:clickable="true"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="175dp"
        android:layout_marginTop="5dp"
        android:elevation="5dp"
        android:background="@drawable/pencil_ic"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_1"
        app:layout_constraintStart_toStartOf="@+id/rectangle_1"
        app:layout_constraintTop_toTopOf="@+id/rectangle_1" />

    <View
        android:id="@+id/rectangle_1"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:background="@drawable/rectangle_ic"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_circleImageView" />

    <RelativeLayout
        android:id="@+id/ic_profileicon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="167dp"
        android:background="@drawable/pp_ic"
        android:clipToOutline="true"
        android:elevation="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_1"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_1"
        app:layout_constraintHorizontal_bias="0.375"
        app:layout_constraintStart_toStartOf="@+id/rectangle_1"
        app:layout_constraintTop_toTopOf="@+id/rectangle_1"
        app:layout_constraintVertical_bias="0.525" />

    <EditText
        android:id="@+id/et_username"
        android:textColor="@color/shadow_color"
        style="@style/TextAppearance.AppCompat.Body2"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="70dp"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="-5sp"
        android:elevation="4dp"
        android:background="@drawable/rectangle_3_ic"
        android:text="@string/edit_username"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_1"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_1"
        app:layout_constraintStart_toStartOf="@+id/rectangle_1"
        app:layout_constraintTop_toTopOf="@+id/rectangle_1" />

    <TextView
        android:id="@+id/tv_Email"
        android:textStyle="italic"
        style="@style/TextAppearance.AppCompat.Body2"
        android:textColor="@color/dark_blue_green"
        android:layout_width="190dp"
        android:layout_height="19dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:elevation="5dp"
        android:gravity="top"
        android:lineSpacingExtra="-2sp"
        android:text="@string/Email_user"
        android:textAppearance="@style/grey_rectangle"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_1"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_1"
        app:layout_constraintHorizontal_bias="0.744"
        app:layout_constraintStart_toStartOf="@+id/rectangle_1"
        app:layout_constraintTop_toTopOf="@+id/rectangle_1"
        app:layout_constraintVertical_bias="0.537" />

    <RelativeLayout
        android:id="@+id/ic_dateicon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="205dp"
        android:background="@drawable/date_ic"
        android:clipToOutline="true"
        android:elevation="5dp"
        android:src="@drawable/pp_ic"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_1"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_1"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/rectangle_1"
        app:layout_constraintTop_toTopOf="@+id/rectangle_1"
        app:layout_constraintVertical_bias="0.687" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="423dp"
        android:layout_marginBottom="30dp"
        android:background="@color/soft_peach"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/et_editDay"
        style="@style/TextAppearance.AppCompat.Body2"
        android:layout_width="30dp"
        android:layout_height="19dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="110dp"
        android:background="@drawable/rectangle_3_ic"
        android:elevation="5dp"
        android:hint="@string/hint_day"
        android:textAlignment="center"
        android:textColor="@color/dark_blue_green"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_1"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_1"
        app:layout_constraintStart_toStartOf="@+id/rectangle_1"
        app:layout_constraintTop_toTopOf="@+id/rectangle_1" />

    <EditText
        android:id="@+id/et_editMonth"
        style="@style/TextAppearance.AppCompat.Body2"
        android:layout_width="90dp"
        android:layout_height="19dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/rectangle_3_ic"
        android:elevation="5dp"
        android:hint="@string/hint_month"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_1"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_1"
        app:layout_constraintStart_toStartOf="@+id/rectangle_1"
        app:layout_constraintTop_toTopOf="@+id/rectangle_1" />

    <EditText
        android:id="@+id/et_editYear"
        style="@style/TextAppearance.AppCompat.Body2"
        android:layout_width="40dp"
        android:layout_height="19dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/rectangle_3_ic"
        android:elevation="5dp"
        android:hint="@string/hint_year"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/rectangle_1"
        app:layout_constraintEnd_toEndOf="@+id/rectangle_1"
        app:layout_constraintStart_toStartOf="@+id/rectangle_1"
        app:layout_constraintTop_toTopOf="@+id/rectangle_1" />

    <Button
        android:id="@+id/btn_yes"
        style="@style/TextAppearance.Material3.BodyLarge"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginStart="210dp"
        android:layout_marginBottom="120dp"
        android:paddingHorizontal="35dp"
        android:text="@string/yes"
        android:textColor="@color/soft_peach"
        android:textFontWeight="900"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/view1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_1" />

    <Button
        android:id="@+id/btn_cancel"
        style="@style/TextAppearance.Material3.BodyLarge"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginEnd="210dp"
        android:layout_marginBottom="120dp"
        android:paddingHorizontal="35dp"
        android:text="@string/cancel"
        android:textColor="@color/soft_peach"
        android:textFontWeight="900"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/rectangle_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rectangle_1"
        app:layout_constraintVertical_bias="0.477" />

    <View
        android:id="@+id/rectangle_6"
        android:layout_width="363dp"
        android:layout_height="33dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rectangle_2_ic"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/view1"
        app:layout_constraintStart_toStartOf="@+id/view1"
        app:layout_constraintTop_toBottomOf="@+id/view1" />


</androidx.constraintlayout.widget.ConstraintLayout>